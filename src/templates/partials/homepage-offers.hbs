<div class="category-wrapper">
	<div class="container">
		<ul class="category-menu">
			<li class="active toggle-category" data-toggle="hotels">Regular Hotels</li>
			<li class="toggle-category" data-toggle="hotels-special">AMF Hotels</li>
			<li class="toggle-category" data-toggle="camping">Camping</li>
		</ul>
	</div>
</div>
<section class="section section--offers text-center wow fadeIn" data-wow-duration="1s" data-wow-delay="0s" id="offers">
	
	{{!-- <h3 class="h3">Choose your stay</h3>  --}}

	

	<div class="homepage-offer-wrapper">
		<div id="hotels" class="homepage-category homepage-category--active">
			<div class="container">
				<div class="row">
					<div class="col">
						<p class="subheader">Choose your favorite hotel in Amsterdam</p>
						<div class="scroll-container scroll-container--nowrap">
							{{> product }}
							{{> product }}
							{{> product }}
							{{> product }}
						</div>
					</div>
				</div>
				<a href="hotels.html" title="" class="button m-t-30">View all Regular Hotels</a>
			</div>
		</div>

		<div id="hotels-special" class="homepage-category">
			<div class="container">
				<div class="row">
					<div class="col">
						<p class="subheader">Stay with AMF for the full experience</p>
						<div class="scroll-container scroll-container--nowrap">
							{{> product }}
							{{> product }}
							{{> product }}
							{{> product }}
						</div>
					</div>
				</div>
				<a href="#" title="" class="button m-t-30">View all AMF hotels</a>
			</div>
		</div>

		<div id="camping" class="homepage-category">
			<div class="container">
				<div class="row">
					<div class="col">
						<p class="subheader m-b-30">Come to AMF in a relaxed way without bringing a tent</p>
						<div class="scroll-container scroll-container--nowrap">
							{{> tent }}
							{{> tent }}
							{{> tent }}
							{{> tent }}
						</div>
					</div>
				</div>
				<a href="#" title="" class="button m-t-30">View all Camping</a>
			</div>
		</div>
	</div>
</section>



