<form class="text-left booking" id="rooms">
	<div class="container">
		{{!-- <h3>Select your checkin, checkout and number of guests</h3> --}}
		<div class="row">
			<div class="col-4">

				<div class="form-group">
					<label for="">Check in</label>
					<div class="input-group date" data-provide="datepicker">
						<input type="text" class="form-control form-control-lg" placeholder="Arrival date">
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-th"><i class="fa fa-calendar" aria-hidden="true"></i></span>
						</div>
					</div>
				</div>

			</div>
			<div class="col-4">

				<div class="form-group">
					<label for="">Check out</label>
					<div class="input-group date" data-provide="datepicker">
						<input type="text" class="form-control form-control-lg" placeholder="Arrival date">
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-th"><i class="fa fa-calendar" aria-hidden="true"></i></span>
						</div>
					</div>
				</div>

			</div>
			<div class="col">

				<div class="form-group">
					<label for="">Number of guests</label>
					<div class="input-group">
						<input type="number" class="form-control form-control-lg" value="1">
					</div>
				</div>

			</div>
			<div class="col">
				<button class="button">Search rooms</button>
			</div>
		</div>
	</div>
</form>

